{
  "name": "berachain-metadata",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "biome format --write \"(src|schemas)/**/*.json\"",
    "validate:tokens": "ajv validate -s schemas/tokens.schema.json -d src/tokens/**/*.json",
    "validate:validators": "ajv validate -s schemas/validators.schema.json -d src/validators/**/*.json",
    "validate:vaults": "ajv validate -s schemas/vaults.schema.json -d src/vaults/**/*.json",
    "validate:images": "tsx scripts/validateImages.ts",
    "validate:json": "tsx scripts/validateJSON.ts",
    "validate": "pnpm run validate:tokens && pnpm run validate:validators && pnpm run validate:vaults && pnpm run validate:images && pnpm run validate:json",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "keywords": [
    "berachain",
    "metadata",
    "tokens",
    "validators",
    "vaults"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv-cli": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.13",
    "ajv-cli": "^5.0.0",
    "biome": "^0.3.3",
    "prettier": "^3.2.5",
    "tsx": "^4.19.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@8.15.0"
}
